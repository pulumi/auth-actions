{
  "name": "pulumi-github-auth-action",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "git@github.com:pulumi/auth-actions",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf coverage build tmp dist",
    "prebuild": "npm run clean",
    "build": "ncc build src/main.ts -e typescript -o dist --source-map",
    "postbuild": "node scripts/replace-ts.js",
    "test": "jest --coverage src/**/*",
    "test:watch": "jest --watch",
    "postinstall": "husky install .github/husky",
    "check-types": "tsc --noemit",
    "lint": "eslint . && npm run check-types",
    "lint:fix": "eslint . --fix && npm run check-types"
  },
  "lint-staged": {
    "src/**/*.{yaml,yml}": "prettier --write",
    "src/**/*.{js,ts}": "eslint --cache --fix",
    "src/**/*.ts": "tsc --noemit",
    "*.md": "prettier --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-playback": "^4.1.0",
    "lint-staged": "^15.2.2",
    "nock": "^13.5.4",
    "prettier": "3.2.5",
    "rimraf": "~5.0.1",
    "ts-jest": "^29.1.3",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "actions-parsers": "^1.0.2",
    "axios": "^1.7.1",
    "runtypes": "^6.7.0"
  }
}
